<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutToast"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivToastPer"
        android:layout_width="54dp"
        android:layout_height="55dp"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="338dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvToastPer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Soy un Toast personalizado"
        app:layout_constraintBottom_toBottomOf="@+id/ivToastPer"
        app:layout_constraintStart_toEndOf="@+id/ivToastPer"
        app:layout_constraintTop_toTopOf="@+id/ivToastPer" />
</androidx.constraintlayout.widget.ConstraintLayout>